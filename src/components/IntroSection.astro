---
import Emoji from "./Emoji";

export interface Props {
  title: string;
  leftAligned?: boolean;
  emoji?: string;
  id?: string;
}

const { title, leftAligned, emoji, id } = Astro.props;
---

<section id={id}>
  <div class:list={["container intro", { leftAligned }]}>
    <div class="background"></div>
    <h2 class="headline">
      {title}
      {emoji && <Emoji src={emoji} />}
    </h2>
    <div class="text"><slot /></div>
  </div>
</section>

<style>
  .intro {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .headline {
    position: relative;
  }

  .text {
    position: relative;
    align-self: flex-end;
    padding-bottom: 44px;
  }

  .background {
    position: absolute;
    background-color: var(--lily-blue);
    top: 0;
    bottom: 0;
    left: 18%;
    right: 18%;
    display: none;
  }

  @media (min-width: 768px) {
    .text,
    .headline {
      max-width: 65%;
    }

    .leftAligned .headline {
      align-self: flex-end;
    }

    .leftAligned .text {
      align-self: flex-start;
    }
    .background {
      display: block;
    }
  }
</style>
