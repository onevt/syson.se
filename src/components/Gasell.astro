---
import gasell from "../images/gasell.png";
---

<div id="gasell">
  <img src={gasell} alt="DI Gasell 2018" />
</div>

<style>
  div {
    background-color: var(--lily-blue);
    min-width: 100%;
    padding-top: 24px;
    padding-bottom: 24px;
    display: flex;
    justify-content: center;
  }

  img {
    width: 100%;
    height: 100%;
    max-width: 25vw;
  }

  @media (max-width: 768px) {
    img {
      max-width: 60vw;
    }
  }
</style>
