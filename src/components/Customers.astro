---
import trustly from "../images/trustly.png";
import comhem from "../images/comhem.png";
import sj from "../images/sj.png";
import klarna from "../images/klarna.png";
import assa from "../images/assa.png";
---

<section id="customers">
  <div class="container content">
    <h1 class="title">Några av våra kunder</h1>
    <div class="logos">
      <img class="logo" src={klarna} alt="Klarna" />
      <img class="logo" src={comhem} alt="Com Hem" />
      <img class="logo" src={sj} alt="SJ" />
      <img class="logo" src={assa} alt="ASSA" />
      <img class="logo" src={trustly} alt="Trustly" />
    </div>
  </div>
</section>

<style>
  #customers {
    background-color: var(--mirage);
    min-width: 100%;
    margin-top: 64px;
    padding-top: 48px;
    padding-bottom: 64px;
  }

  .content {
    display: flex;
    flex-direction: column;
  }

  .title {
    color: var(--tradewind);
  }

  .logos {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    max-height: 52px;
    max-width: 180px;
  }

  @media (max-width: 1024px) {
    .logo {
      margin-bottom: 66px;
    }
    .title {
      margin-bottom: 40px;
    }
  }

  @media (min-width: 1024px) {
    .customers {
      padding-top: 60px;
      padding-bottom: 120px;
    }

    .logos {
      display: flex;
      flex-direction: row;
    }

    .logo {
      margin-right: 38px;
    }
  }
</style>
